<Window
    x:Class="TestDataGrid.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestDataGrid"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="MainWindow"
    Width="800"
    Height="450"
    ui:ThemeManager.IsThemeAware="True"
    ui:ThemeManager.RequestedTheme="Dark"
    ui:TitleBar.IsIconVisible="True"
    ui:TitleBar.MaximizeButtonAvailability="Collapsed"
    ui:WindowHelper.FixMaximizedWindow="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Background="{DynamicResource {x:Static ui:ThemeKeys.AcrylicBackgroundFillColorDefaultBrushKey}}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Width="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="testGrid_Click"
            Content="Data" />
        <DataGrid
            Name="dataGrid"
            Grid.Row="1"
            Margin="5,5,5,5"
            AutoGenerateColumns="False"
            CanUserResizeColumns="False"
            CanUserResizeRows="False"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            HorizontalScrollBarVisibility="Disabled"
            IsReadOnly="True"
            ItemsSource="{Binding employeesCollection, UpdateSourceTrigger=PropertyChanged}"
            VirtualizingPanel.IsVirtualizingWhenGrouping="True"
            VirtualizingPanel.VirtualizationMode="Recycling">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn
                    MinWidth="0"
                    Header=""
                    Visibility="Visible">
                    <DataGridCheckBoxColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="CheckAll" MinWidth="0" />
                        </DataTemplate>
                    </DataGridCheckBoxColumn.HeaderTemplate>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Username}"
                    Header="Username" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Password}"
                    Header="Password" />
                <DataGridTextColumn
                    Width="90"
                    Binding="{Binding Skins}"
                    Header="Skins" />
                <DataGridTextColumn
                    Width="90"
                    Binding="{Binding Region}"
                    Header="Region" />
                <DataGridTextColumn
                    Width="90"
                    Binding="{Binding Verifed}"
                    Header="Verifed" />
                <DataGridTextColumn
                    Width="90"
                    Binding="{Binding Rank}"
                    Header="Rank" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
